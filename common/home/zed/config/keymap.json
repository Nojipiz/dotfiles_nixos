[
  {
    "context": "ProjectPanel && not_editing", // Tree Explorer Stuff
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem"
    }
  },
  {
      "context": "menu",
      "bindings": {
        "ctrl-j": [ "workspace::SendKeystrokes", "down"],
        "ctrl-k": [ "workspace::SendKeystrokes", "up"]
      }
  },
  {
    "context": "VimControl && !menu",
    "bindings": {
      // Put key bindings here if you want them to work in normal & visual mode.
      "space w": "workspace::Save",
      "shift-h": "pane::ActivatePrevItem",
      "shift-l": "pane::ActivateNextItem",
      "space c": "pane::CloseActiveItem",
      "space f": "file_finder::Toggle",
      "space l a": "editor::ToggleCodeActions"
      //"space q": "workspace::CloseWindow"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      // "shift-y": ["workspace::SendKeystrokes", "y $"] // Use neovim's yank behavior: yank to end of line.
      "space l r": "editor::Rename",
      "space e": "workspace::ToggleLeftDock",
      "g r": "editor::GoToDeclaration"
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "i i": "vim::NormalBefore" // In insert mode, make jk escape to normal mode.
    }
  },
  {
    "context": "EmptyPane || SharedScreen",
    "bindings": {
      // Put key bindings here (in addition to the context above) if you want them to
      // work when no editor exists.
      // "space f": "file_finder::Toggle"
    }
  }
]
