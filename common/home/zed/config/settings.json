{
  "base_keymap": "JetBrains",
  "theme": "Ayu Mirage",
  "telemetry": {
    "metrics": false
  },
  "tab_size": 2,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "lsp": {
    "metals": {
      "binary": {
        "path": "/run/current-system/sw/bin/metals",
      },
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          }
        }
      }
    }
  }
}
