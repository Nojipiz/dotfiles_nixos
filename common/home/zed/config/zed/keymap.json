[
  /* Workspace panes navigation */
  {
    "context": "Editor || Terminal || Dock || KeyContextView",
    "bindings": {
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp"
    }
  },
  /* Editor panes navigation */
  {
    "context": "(VimControl && !menu) || Terminal",
    "bindings": {
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem"
    }
  },
  /* Terminal openning */
  {
    "context": "Editor || Terminal || Dock || KeyContextView",
    "bindings": {
      "ctrl-t": "workspace::NewCenterTerminal"
    }
  },
  /* -- START Tree explorer operations -- */
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy",
      "r": "project_panel::Rename"
    }
  },
  {
    // close tree exporer in editor.
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space e": "workspace::ToggleLeftDock"
    }
  },
  /* -- END Tree explorer operations -- */
  /* Menus up and downs */
  {
    "context": "menu || Picker",
    "bindings": {
      "ctrl-k": ["workspace::SendKeystrokes", "up"],
      "ctrl-j": ["workspace::SendKeystrokes", "down"]
    }
  },
  /* Pane management in editor */
  {
    "context": "VimControl && !menu",
    "bindings": {
      "space w": "workspace::Save",
      "space l a": "editor::ToggleCodeActions",
      "space c": "pane::CloseActiveItem",
      "space q": "pane::CloseActiveItem",
      "space /": "vim::ToggleComments"
    }
  },
  /* Editor code interaction */
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space l r": "editor::Rename",
      "g r": "editor::GoToDeclaration",
      "ctrl-d": "vim::ScrollDown",
      "ctrl-u": "vim::ScrollUp"
    }
  },
  /* Insert Vim mode */
  {
    "context": "vim_mode == insert",
    "bindings": {
      "i i": "vim::NormalBefore"
    }
  },
  /* Other screens */
  {
    "context": "EmptyPane || SharedScreen || (VimControl && !menu)",
    "bindings": {
      "space s f": "file_finder::Toggle",
      "space s t": ["workspace::SendKeystrokes", "ctrl-shift-f"],
      "space s p": "projects::OpenRecent",
      "space g g": [
        "task::Spawn",
        { "task_name": "start lazygit", "reveal_target": "center" }
      ]
    }
  },
  /* Close global search window */
  {
    "context": "ProjectSearchBar",
    "bindings": {
      "escape": "pane::CloseActiveItem"
    }
  },
  /* -- START Agent Panel bindings  -- */
  {
    "context": "Editor || Terminal || Dock || KeyContextView",
    "bindings": {
      "ctrl-i": "agent::ToggleFocus"
    }
  },
  {
    // Close the agent panel.
    "context": "AgentPanel > Editor",
    "bindings": {
      "ctrl-i": "workspace::CloseActiveDock"
    }
  }
  /* -- END Agent Panel bindings  -- */
]
