[
  /* Global Editor */
  {
    "context": "Editor",
    "bindings": {
      "ctrl-t": "workspace::NewCenterTerminal"
    }
  },
  /* Tree Explorer */
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "space e": "workspace::ToggleLeftDock",
      "a": "project_panel::NewFile",
      "d": "project_panel::Delete",
      "x": "project_panel::Cut",
      "c": "project_panel::Copy"
    }
  },
  /* Terminal */
  {
    "context": "Terminal",
    "bindings": {
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "ctrl-t": "workspace::NewCenterTerminal"
    }
  },
  {
    "context": "menu || Picker",
    "bindings": {
      "ctrl-k": ["workspace::SendKeystrokes", "up"],
      "ctrl-j": ["workspace::SendKeystrokes", "down"]
    }
  },
  // Put key bindings here if you want them to work in normal & visual mode.
  {
    "context": "VimControl && !menu",
    "bindings": {
      /* Start: Pane movements */
      "ctrl-l": "workspace::ActivatePaneRight",
      "ctrl-h": "workspace::ActivatePaneLeft",
      "ctrl-j": "workspace::ActivatePaneDown",
      "ctrl-k": "workspace::ActivatePaneUp",
      /* End: Pane movements */
      /* Start: Item movements */
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      /* End: Item movements */
      "space w": "workspace::Save",
      "space l a": "editor::ToggleCodeActions",
      "space c": "pane::CloseActiveItem",
      "space q": "pane::CloseActiveItem"
    }
  },
  {
    "context": "vim_mode == normal && !menu",
    "bindings": {
      "space l r": "editor::Rename",
      "space e": "project_panel::ToggleFocus",
      "g r": "editor::GoToDeclaration",
      "ctrl-d": "vim::ScrollDown",
      "ctrl-u": "vim::ScrollUp"
    }
  },
  /* Insert Vim mode */
  {
    "context": "vim_mode == insert",
    "bindings": {
      "i i": "vim::NormalBefore"
    }
  },
  {
    "context": "EmptyPane || SharedScreen || (VimControl && !menu)",
    "bindings": {
      "space s f": "file_finder::Toggle",
      "space s t": ["workspace::SendKeystrokes", "ctrl-shift-f"],
      "space g g": "git_panel::ToggleFocus"
    }
  },
  /* Git Panel */
  {
    "context": "GitPanel",
    "bindings": {
      "esc": "workspace::ToggleLeftDock",
      "q": "workspace::ToggleLeftDock",
      "p": "git::Pull",
      "P": "git::Push",
      "c": "git::Commit",
      "a": "git::StageAll"
    }
  },
  {
    "context": "GitPanel > Editor",
    "bindings": {
      "q": null,
      "p": null,
      "P": null,
      "c": null,
      "a": null
    }
  }
]
