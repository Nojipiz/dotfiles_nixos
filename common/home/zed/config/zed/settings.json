{
  "base_keymap": "JetBrains",
  "theme": "Tokyo Night Storm",
  "icon_theme": "Material Icon Theme",
  "telemetry": {
    "metrics": true
  },
  "tab_size": 2,
  "relative_line_numbers": true,
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "lsp": {
    "metals": {
      "binary": {
        "path": "/run/current-system/sw/bin/metals"
      },
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          }
        }
      }
    }
  }
}
