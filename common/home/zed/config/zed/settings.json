{
  "base_keymap": "JetBrains",
  "theme": "Tokyo Night Storm",
  "icon_theme": "Material Icon Theme",
  "telemetry": {
    "metrics": true,
  },
  "tab_size": 2,
  "relative_line_numbers": "enabled",
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 12,

  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
  },
  "format_on_save": "off",
  "terminal": {
    "shell":  {
      // Make sure to change this code if pkgs.fish is removed.
      "program": "/run/current-system/sw/bin/fish"
    }
  },
  "lsp": {
    "metals": {
      "binary": {
        "path": "/run/current-system/sw/bin/metals",
        "arguments": ["-Dmetals.http=on"],
      },
      "initialization_options": { "isHttpEnabled": true },
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true,
          },
          "typeParameters": {
            "enable": true,
          },
          "implicitArguments": {
            "enable": true,
          },
          "hintsInPatternMatch": {
            "enable": true,
          },
        },
      },
    },
    "deno": {
      "settings": {
        "deno": {
          "enable": true,
        },
      },
    },
  },

  "languages": {
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
      ],
      "formatter": "language_server",
    },
    "TypeScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
      ],
      "formatter": "language_server",
    },
    "TSX": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
      ],
      "formatter": "language_server",
    },
  },
}
